= form_for @word do |f|
  - if @word.errors.any?
    #error_explanation
      %h2= "#{pluralize(@word.errors.count, "error")} prohibited this word from being saved:"
      %ul
        - @word.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label "単語名"
    = f.text_field :name
  .field

  .actions
    = f.submit 'Save'
